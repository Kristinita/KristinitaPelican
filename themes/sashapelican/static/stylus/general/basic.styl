/* ==========================================================================
	> General
	========================================================================== */

/* >> import placeholders
	========================================================================== */

@import "placeholders.styl"

/* >> overflow-wrap
	========================================================================== */

.SashaBottomAside
.SashaInlineHighlight
	@extend $SashaNoHorizontalScrollbar

/* >> HTML, body
	========================================================================== */

html
	@extend $SashaHTMLBody

body
	@extend $SashaHTMLBody
	// Commas between fonts required:
	font-family Arial, "Helvetica Neue", Helvetica, sans-serif
	font-size 1.1875rem
	margin 0
	padding 0

/*  >> Links
	========================================================================== */

/*
* Disable dotted outline, if user move by links use tab key, see
* https://css-tricks.com/removing-the-dotted-outline/
*/

a
	@extend $SashaNoHorizontalScrollbar
	text-decoration none

	&:focus
		outline 0

/*
* Permalinks
*/

/* Permalinks hidden by default */

.headerlink
	visibility hidden

/* >> Headers
	========================================================================== */

h1
	@extend $SashaVisiblePermalinks
	font-family "Истина"
	font-size 1.9375rem
	font-weight lighter
	font-style normal
	/* Decrease text brightness */
	-webkit-filter brightness(97%)
	filter brightness(97%)

h2
	@extend $SashaVisiblePermalinks
	font-family "Мечта"
	font-size 1.4rem

h3
h4
h5
h6
	@extend $SashaVisiblePermalinks

/* Interlineage in h1 header */

.SashaHeader
	line-height .7rem

/* >> Bold and cursive
	========================================================================== */

em
	@extend $SashaNoHorizontalScrollbar

/* >> KBD
	========================================================================== */

kbd
	font-weight bold
	border-radius .1875rem

/* >> noscript
	========================================================================== */

/*
* Message in top bar, if JavaScript disable:
* Based on:
* http://www.w3programmers.com/pure-css-noscript-message/
*/

noscript
	color white
	font-family sans-serif
	font-weight bold
	text-align center
	padding 1rem 0
	background rgba(0 0 0 .9)
	position fixed
	top 0
	z-index 900


/* ==========================================================================
	> Tables
	========================================================================== */

/*
* Basic style — https://css-tricks.com/complete-guide-table-element/#article-header-id-4
*/

td
th
	padding .5rem

/*
* [FIXME] I can't make responsive tables:
* https://stackoverflow.com/q/50274179/5951529
* https://github.com/noeldelgado/gemini-scrollbar/issues/62
*/
// .justtable
// 	overflow-x auto

/* ==========================================================================
	> Lists
	========================================================================== */

/* >> ol, ul, li
	========================================================================== */

/* [DEPRECATED] Incorrect works indents for lists, example:
<li>
<p>Kristina</p>
</li>
*/

/*
That the bullets not lost on mobile version
ol,
ul {
	list-style-position: inside;
}
*/

// Left margin in nested lists

ul
	li
		margin-left 1rem

.SashaOlMargin
	margin-left 1rem

/* >> TOC
	========================================================================== */

// Disable default numeration
.SashaTOC
	list-style-type none
	padding 0 0 0 1rem

/* >> dd, dt, dl
	========================================================================== */

/*
* Dd, dt, dl tags
* https://webref.ru/html/dd
*/

dt
	font-weight bold

dd
	font-style italic

/* >> Russian letters as markers
	========================================================================== */

/*
* Russian letters as list markers
* https://ru.stackoverflow.com/a/523299/199934
*/

.russianletters
	list-style-type none
	/* Прячем исходную нумерацию */

	li
		margin 0

@-webkit-keyframes fade-in
	0%
		opacity 0

	100%
		opacity 1

@keyframes fade-in
	0%
		opacity 0

	100%
		opacity 1

@-webkit-keyframes fade
	10%
		-webkit-transform scale(1, 1)
		transform scale(1, 1)

	35%
		-webkit-transform scale(1, 1.7)
		transform scale(1, 1.7)

	40%
		-webkit-transform scale(1, 1.7)
		transform scale(1, 1.7)

	50%
		opacity 1

	60%
		-webkit-transform scale(1, 1)
		transform scale(1, 1)

	100%
		-webkit-transform scale(1, 1)
		transform scale(1, 1)
		opacity 0

@keyframes fade
	10%
		-webkit-transform scale(1, 1)
		transform scale(1, 1)

	35%
		-webkit-transform scale(1, 1.7)
		transform scale(1, 1.7)

	40%
		-webkit-transform scale(1, 1.7)
		transform scale(1, 1.7)

	50%
		opacity 1

	60%
		-webkit-transform scale(1, 1)
		transform scale(1, 1)

	100%
		-webkit-transform scale(1, 1)
		transform scale(1, 1)
		opacity 0

/* ==========================================================================
	> Footer
	========================================================================== */

/* >> Neighbors Pelican
	========================================================================== */

/*
* Add links for previous and next buttons
* https://github.com/getpelican/pelican-plugins/tree/master/neighbors
*  Example — https://github.com/whatifrussian/website/blob/9e29831dcf61c85e711a392709aaf711212ba7c9themes/whatif/templates/includes/article_content.html
*/

.SashaHeadPageLeft
.SashaPreviousNeighbor
	@extend $SashaFloatLeft
	@extend $SashaMargin5Rem
	@extend $SashaFontSizeChildLink

.SashaNextNeighbor
.SashaHeadPageRight
	@extend $SashaFloatRight
	@extend $SashaMargin5Rem
	@extend $SashaFontSizeChildLink

/*
* Stop float — https://stackoverflow.com/a/6205224/5951529
* Need to add empty div tag after tags with float; not use for same as float tag
*/

.SashaClearBoth
	clear both

/* >> Another footer
	========================================================================== */

.SashaEmNoColor
	@extend $SashaItalic
	@extend $SashaMargin5Rem

.WorkOnYourself
	@extend $SashaMargin5Rem

.SashaEmNoColorBottom
	@extend $SashaItalic
	margin 1rem 0 0

/* ==========================================================================
	> Images
	========================================================================== */

/* >> img
	========================================================================== */

img
	max-width 100%
	margin 0 auto

/* >> Left and right
	========================================================================== */

.leftimg
	float left
	margin .3125rem .3125rem .3125rem 0

.rightimg
	float right
	margin .3125rem 0 .3125rem .3125rem

/* >> Width of images
	========================================================================== */

.Sasha140
	width 8.75rem

.Sasha280
	width 17.5rem

.Sasha470
	width 29.375rem

.Sasha700
	width 43.75rem

/* >> Image border
	========================================================================== */

.SashaSign
	padding .4375rem
	margin .3125rem 0

	figcaption
		margin 0 auto

/* >> External links image
	========================================================================== */

/*
* Pelican plugin linkclass, see
* https://github.com/rlaboiss/pelican-linkclass
*/

.external
	&:after
		content url("../../../images/interface_images/external-link.png")
		margin-left .2rem

/* ==========================================================================
	> Videos
	========================================================================== */

/* >> Embed iframe videos
	========================================================================== */

.SashaVideo
	width 100%
	position relative
	padding-bottom 74.380%

iframe
	width 100%
	height 100%
	position absolute
	/* Instead of frameborder — http://stackoverflow.com/a/10831379/5951529 */
	border 0


/* ==========================================================================
	> Blockquotes
	========================================================================== */

/* >> Left-border blockquote
	========================================================================== */

blockquote
	font-size 1.1875rem
	font-style italic
	margin .625rem 2.5rem
	padding .9375rem

/* >> Terms
	========================================================================== */

.SashaBlockquote
	padding .25rem
	border-width thick
	border-top-style ridge
	border-right-style groove
	border-bottom-style groove
	border-left-style ridge

/* >> Quotes top and bottom
	========================================================================== */

.SashaCitation
	display inline-block

.SashaTopQuote
	display inline-block
	margin 1.8rem 0 0
	font-size 3rem
	line-height 0
	vertical-align - .2rem

.SashaBottomQuote
	display inline-block
	font-size 3rem
	line-height 0
	vertical-align -2.5rem

/* >> Epigraph
	========================================================================== */

/*
* Disable gradient for em tag
* Inscription after epigraph
*/

.SashaEpigraph
	font-style italic
	margin 4rem 0
	text-align right

	> em
		background-image none

	> .SashaEpigraphAuthor
		line-height 1rem
		margin 2rem 0
		font-style italic


/* ==========================================================================
	> Code
	========================================================================== */

code
	font-size 1.1875rem

/*
* relative — for correct code block displaying
* pre-wrap — code wraps to the next line
* padding — padding code from the code block
* tab-size — because tab=8 in Rainbow code
*/

pre
	@extend $SashaNoHorizontalScrollbar
	position relative
	white-space pre-wrap
	padding .5rem
	font-size 1.1875rem
	-moz-tab-size 4
	-o-tab-size 4
	tab-size 4


/* ==========================================================================
	> Sasha tags
	========================================================================== */

/* >> Page version
	========================================================================== */

.SashaVersion
	font-size .9rem
	font-weight bold

/* >> Center element
	========================================================================== */

/*
* Replace center tag:
* https://webref.ru/html/center
*/

.SashaCenter
	text-align center

/* >> Inline and block
	========================================================================== */

// Make block elements to inline
.SashaInline
	float left

/* >> Shadows
	========================================================================== */

.SashaShadow
	font-family "Times New Roman"
	font-size 1.6rem
	width auto


/* ==========================================================================
	> External scripts and plugins
	========================================================================== */

/* >> Clipboard.js
	========================================================================== */

/*
* Clipboard.js button
* Using “float: right” instead of “position: absolute”,
* That button not block a text, see:
* http://bit.ly/2EwrJBH
*/

.SashaButton
	float right

// Width of clipboard button in code blocks
.SashaNotModify
	width .8125rem

/* >> Tooltipster
	========================================================================== */

// Theme
.tooltipster-punk-purple
.tooltipster-punk-aquamarine
	.tooltipster-box
		border 0
		border-radius .3125rem

/* >> JQuery Lazy
	========================================================================== */

/*
* JQuery Lazy
* http://jquery.eisbehr.de/lazy/
* I need add min-width to my images:
* https://github.com/eisbehr-/jquery.lazy/issues/86
*/

.SashaLazy
	min-width 1rem
