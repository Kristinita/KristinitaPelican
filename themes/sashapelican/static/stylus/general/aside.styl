/* ==========================================================================
	General
	========================================================================== */

.SashaIconAside
	// Icon the whole aside space
	background-size cover
	height 100%
	// That aside doesn't fell, if browser-update script enabled:
	// https://i.imgur.com/HxP20ee.png
	top 0

/* Text in aside bottom */

.SashaBottomAside
	font-size 2rem
	line-height 2rem
	text-align center
	position absolute
	bottom 7%
	left 10%
	width 80%

/* ==========================================================================
	Media
	========================================================================== */

/*
* Media queries
* need “screen”:
* https://webref.ru/css/media
*/

/*
* Orientation, see:
* https://www.webopedia.com/TERM/P/portrait.html
*/

/* For portrait orientation */

@media screen and (orientation portrait)
	.SashaIconAside
		width 100%
		/*
		* That .SashaBottomAside text will child for <aside> element:
		* https://github.com/noeldelgado/gemini-scrollbar/issues/46#issuecomment-374928170
		*/
		position relative

	noscript
		width 100%

	/*
	jquery-responsive-tables —
	plugin for different tables displaying in different orientations:
	https://www.npmjs.com/package/jquery-responsive-tables
	http://ryanwells.com/examples/responsive-tables/
	*/

	/*
	Disable borders for portrait table:
	https://webref.ru/css/border-bottom-width
	[NOTE] “.jrt” required
	*/
	.jrt td
		border-bottom-width 0

	/*
	[LEARN][STYLUS] Selector interpolation:
	http://stylus-lang.com/docs/interpolation.html#selector-interpolation
	Range:
	http://stylus-lang.com/docs/operators.html#range--
	[NOTE] “td” required for “white-space”;
	not required for “margin-bottom”, but not removed for code simplicity
	[INFO] margin-bottom for long titles:
	https://github.com/ryanwellsdotcom/jquery-responsive-tables/issues/1
	[INFO] Line breaking for “content” CSS property:
	https://alligator.io/css/line-break-content-property/
	*/
	for column in 1..7
		td.jrt-cell-{column}
			margin-bottom 2rem
			&::before
				white-space normal


/* For landscape orientation */

@media screen and (orientation landscape)
	.SashaIconAside
		width 35%
		position fixed

	/*
	* “div.buorg”, not “.buorg” overwrite default width:
	* https://stackoverflow.com/a/9956515/5951529
	*/
	div.buorg
	main
	noscript
		width 65%
