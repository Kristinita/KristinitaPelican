.ReportTypo
	font-family sans
	position fixed
	margin auto
	padding 0.75rem
	top 30%
	left 0
	right 0
	max-width 30rem
	background lightblue
	border 0.0625rem solid #aaa
	color rebeccapurple

.ReportTypo-heighlight
	color mediumvioletred
	font-weight bold
	text-decoration underline

.ReportTypo-header
	font-size 1.3125rem
	font-weight bold
	color brown

.ReportTypo-message
	font-family mono
	width 100%
	height 3.125rem
	margin 0.75rem 0

.ReportTypo-label
	margin 0.75rem 0 0.375rem 0

.ReportTypo-comment
	display block
	width 100%
	height 6.25rem
