@import "../general/placeholders.styl"

body
	padding 0

a
	color gold

img
	/* Center slide:
	https://stackoverflow.com/a/34670755/5951529 */
	margin auto
	max-width 96%

.SashaPageLoading
	box-shadow none
	/*
	[INFO] Tracking will still:
	https://en.ryte.com/wiki/Tracking_Pixel
	*/
	display none

.Sasha404
	@extend $SashaTextAlignCenter
	margin-bottom 2rem
	font-size 4rem
	color orange
	font-weight bold
	-webkit-text-stroke .1rem red

.Sasha404Description
	@extend $SashaTextAlignCenter
	margin-bottom 2rem
	font-size 2rem
	color honeydew
	/* text-stroke â€” border around letters:
	https://ru.stackoverflow.com/q/196968/199934
	https://css-tricks.com/almanac/properties/t/text-stroke/
	https://caniuse.com/#feat=text-stroke
	*/
	-webkit-text-stroke .04rem

// margin-bottom for images, if small height and page scroll to bottom

.KiraSlider
	margin-bottom 2rem
